<Window x:Class="LayoutFixer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LayoutFixer Settings" Height="260" Width="520"
        WindowStartupLocation="CenterScreen">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0" FontSize="16" FontWeight="SemiBold" Text="LayoutFixer" />
    <TextBlock Grid.Row="1" Margin="0,6,0,10" Foreground="Gray"
               Text="Select two installed input languages and a hotkey. Then select text anywhere and press the hotkey."/>

    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
      <StackPanel Width="240">
        <TextBlock Text="Language A" Margin="0,0,0,4"/>
        <ComboBox x:Name="LangABox" />
      </StackPanel>

      <StackPanel Width="240" Margin="12,0,0,0">
        <TextBlock Text="Language B" Margin="0,0,0,4"/>
        <ComboBox x:Name="LangBBox" />
      </StackPanel>
    </StackPanel>

    <StackPanel Grid.Row="3" Orientation="Horizontal" VerticalAlignment="Top">
      <StackPanel Width="240">
        <TextBlock Text="Hotkey (examples: F9, F10, Ctrl+Alt+L)" Margin="0,0,0,4"/>
        <TextBox x:Name="HotkeyBox" />
      </StackPanel>

      <StackPanel Width="240" Margin="12,0,0,0">
        <CheckBox x:Name="StartupCheck" Content="Run at startup (per-user)" Margin="0,22,0,0"/>
      </StackPanel>
    </StackPanel>

    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
      <Button Content="Save" Width="90" Margin="0,0,8,0" Click="Save_Click"/>
      <Button Content="Close" Width="90" Click="Close_Click"/>
    </StackPanel>

  </Grid>
</Window>
